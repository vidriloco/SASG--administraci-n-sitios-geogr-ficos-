<h1>Listado de Colonias</h1>

<table>
  <tr>
    <th>Nombre</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @colonias.each do |colonia| %>
  <tr>
    <td><%= colonia.nombre %></td>
    <td><%= button_to 'Mostrar', colonia, :method => :get %></td>
    <td><%= button_to 'Modificar', edit_colonia_path(colonia), :method => :get %></td>
    <td><%= button_to 'Eliminar', colonia, :confirm => '¿Estás seguro?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= button_to 'Nueva Colonia', new_colonia_path, :method => :get %>
<br/>
<%= button_to 'Ir a Estaciones', estaciones_path, :method => :get %>
