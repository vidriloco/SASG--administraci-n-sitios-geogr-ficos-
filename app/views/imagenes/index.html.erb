<h1>Listando imagenes</h1>

<table>
  <tr>
    <th>Nombre de Archivo</th>
    <th>Nombre</th>
    <th>MIME</th>
    <th>Descripción</th>
    <th>Sitio</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @imagenes.each do |imagen| %>
  <tr>
    <td><%= imagen.nombre_de_archivo %></td>
    <td><%= imagen.nombre %></td>
    <td><%= imagen.mime %></td>
    <td><%= imagen.descripcion %></td>
    <td><%= imagen.sitio.nombre unless imagen.sitio.nil? %></td>
    <td><%= button_to 'Mostrar', imagen, :method => :get %></td>
    <td><%= button_to 'Modificar', edit_imagen_path(imagen), :method => :get %></td>
    <td><%= button_to 'Eliminar', imagen, :confirm => '¿Estás seguro?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= button_to 'Nueva Imagen', new_imagen_path, :method => :get %>
