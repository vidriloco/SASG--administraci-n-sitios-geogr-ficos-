<%= form_for(@linea) do |f| %>
  <% if @linea.errors.any? %>
  <div id="errorExplanation">
    <h2><%= pluralize(@linea.errors.count, "error") %> impidieron guardar ésta línea:</h2>
    <ul>
    <% @linea.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>

  <div class="field">
    <%= f.label :nombre %><br />
    <%= f.text_field :nombre %>
  </div>
  <div class="field">
    <%= f.label :transporte_id %><br />
    <% s = @linea.transporte.nil? ? 0 : @linea.transporte.id %>
    <%= f.select :transporte_id, "<option></option>" + options_from_collection_for_select(@transportes, :id,:nombre, s) %>
  </div>
  <div class="field">
    <%= f.label :color %><br />
    <%= f.text_field :color %>
  </div>

  <div class="field">
    <%= f.label :identificador %><br />
    <%= f.text_field :identificador %>
  </div>
  <div class="actions">
    <%= f.submit("Guardar Línea") %>
  </div>
<% end %>
